<div class='container p-5 d-grid mt-2 tech-list'>
  <div class='d-flex justify-content-center'>
    <h2 class="blogs-created-by">Blogs Created by:{{name}}</h2>
  </div>
  {{#if techs.length}}
  <h3>New Blogs:</h3>
  {{#each techs as |tech|}}
  <div class='card mt-3'>
    <div class='card-body'>
      <div class='row'>
        <div class='col-12 col-md-7'>
          <h5><a href='/tech/{{tech.id}}'>{{tech.title}}</a></h5>
        </div>
        <div class='d-flex justify-content-end align-items-center col-12 col-md-5'>
          <p class='m-2'>
            {{format_date tech.date_created}}

            <button class='btn btn btn-danger' data-id='{{tech.id}}' data-function='edit'>EDIT</button>
            <button class='btn btn btn-danger' data-id='{{tech.id}}' data-function='delete'>DELETE</button>
          </p>
        </div>
      </div>
    </div>

  </div>
  {{/each}}
  {{/if}}
  <div class='d-flex justify-content-center p-3 mt-1'>
    <a href="/new" class="btn btn-primary" onclick="myFunction()">+ Blog</a>

  </div>

</div>
<script src="./js/dashboard.js"></script>