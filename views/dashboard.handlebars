<section class='container p-5 d-grid mt-2'>
  <div class='d-flex justify-content-center'>
    <h2>Create a Blog</h2>
  </div>
  {{#if blogs.length}}
  <h3>New Blogs:</h3>
  {{#each blogs as |blog|}}
  <div class='card'>
    <div class='card-header'>
      <div class='row'>
        <div class='col-12 col-md-7'>
          <h5><a href='/tech/{{blog.id}}'>{{blog.title}}</a></h5>
        </div>
        <div class='d-flex justify-content-end align-items-center col-12 col-md-5'>
          <p class='m-0'>
            {{format_date blog.date_created}}

            <button class='btn btn btn-primary' data-id='{{blog.id}}' data-function='edit'>EDIT</button>
            <button class='btn btn btn-primary' data-id='{{blog.id}}' data-function='delete'>DELETE</button>
          </p>
        </div>
      </div>
    </div>

  </div>
  {{/each}}
  {{/if}}
  <div class='d-flex justify-content-center p-3 mt-1'>
    <a href="/new" class="btn btn-primary" onclick="myFunction()">+ Blog</a>
    
  </div>

</section>
<script src="./js/dashboard.js"></script>