
<div class="container p-2 d-grid">
  <div class='d-flex justify-content-center'>
    <h2 class="blogs-created-by">Add Your Comment</h2>
  </div>
  <form class="addComment">
    <div class="mb-3 m-2">
      <label for="AddComment">Title</label>
      <input type="text" class="form-control" id="addComment" placeholder="Add Comment" />
    </div>
    <div class="mb-3 m-2">
      <label for="content" class="form-label">Content</label>
      <textarea class="form-control" id="addComment" placeholder="Content"></textarea>
    </div>
    <div class="d-flex justify-content-evenly p-3 ">
      <button type="submit" class="btn btn-primary">Add Comment</button>
      <a href="/dashboard" class="btn btn-primary">Cancel</a>
    </div>
  </form>
</div>
















<script scr="./js/addComment.js"></script>






































